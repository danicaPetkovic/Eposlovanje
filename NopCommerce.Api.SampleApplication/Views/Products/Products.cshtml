@model IEnumerable<NopCommerce.Api.SampleApplication.DTOs.ProductApi>
<ul>
    @foreach (var product in Model)
    {
        <li>
            @product.Name
            @foreach(var image in product.Images)
            { 
                <img src="@image.src" width="50px" height="50px" />
            }
            - @Html.ActionLink("Update Product", "UpdateProduct",  new { productId = product.Id }) -
            @Html.ActionLink("Delete Product", "DeleteProduct", new { productId = product.Id })
        </li>
    }
</ul>
<li>
    @Html.ActionLink("Create New Product", "CreateProduct", "Products")
</li>   