@{
    Layout = "Layout.cshtml";
}

<div>
    @using (Html.BeginRouteForm("Submit", FormMethod.Post))
    {
        <table>
            <tr>
                <td>
                    <label for="serverUrl">Server url</label>
                </td>
                <td>
                    <input name="serverUrl" type="text" id="serverUrl" value="http://localhost:1030" style="width:400px"/>
                </td>
            </tr>
            <tr>
                <td>
                    <label for="clientId">Client Id</label>
                </td>
                <td>
                    <input name="clientId" type="text" id="clientId" value="56037224-69a8-4793-8217-62e081525551" style="width:400px"/>
                </td>
            </tr>
            <tr>
                <td>
                    <label for="clientSecret">Client Secret</label>
                </td>
                <td>
                    <input name="clientSecret" type="text" id="clientSecret" value="cf32c5ba-07cd-4d12-8c19-c58a844fd742" style="width:400px"/>
                </td>
            </tr>
            <tr>
                <td>
                    <label for="redirectUrl">Redirect Url</label>
                </td>
                <td>
                    <input name="redirectUrl" type="text" id="redirectUrl" value="@Url.RouteUrl("GetAccessToken", null, Request.Url.Scheme)" readonly="readonly" style="width:400px"/>
                </td>
            </tr>
            <tr>
                <td>
                    <input type="submit" value="Get Access Token" />
                </td>
            </tr>
        </table>
    }
</div>